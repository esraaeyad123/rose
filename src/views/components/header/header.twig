window.onscroll = function() {
    const button = document.getElementById("scrollToTop");
    if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
        button.style.display = "flex"; // إظهار الزر
    } else {
        button.style.display = "none"; // إخفاء الزر
    }
};

function closeBanner() {
    const banner = document.getElementById('promoBanner');
    banner.style.animation = 'slideOut 0.5s forwards'; // بدء تأثير الخروج
    setTimeout(() => {
        banner.style.display = 'none'; // إخفاء الشريط بعد الانتهاء من الحركة
    }, 500); // مطابقة مع مدة الحركة
}



</script>



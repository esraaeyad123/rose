{% set marquee = theme.settings.get('marquee', true) %}
{% set marqueetext = theme.settings.get('marqueetext', true) %}
{% set marqueecolortext = theme.settings.get('marqueecolortext', true) %}
{% set marqueecolorback = theme.settings.get('marqueecolorback', true) %}




{% set scrolltotop = theme.settings.get('scrolltotop', true) %}

{% if scrolltotop %}
  <div class="scroll-top fixed right-8 w-10 h-10 z-40 text-white text-lg flex justify-center items-center cursor-pointer duration-500 bottom-14" aria-label="Scroll to Top">
    <i class="sicon-caret-up-double"></i>
  </div>
{% endif %}
{% set buttonwat   = theme.settings.get('buttonwat', true) %}
{% set wherebutton = theme.settings.get('wherewatbut', true) %}
{% if buttonwat %}
{% if wherebutton == 'right' %}
<a href="https://wa.me/{{ theme.settings.get('numwat') }}?text=مرحبًا! أود الاستفسار عن معلومات إضافية."
   class="whatsapp-button" 
   aria-label="تواصل معنا عبر واتساب">
  <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="واتساب" style="width: 24px; height: 24px;" />
  <span class="whatsapp-text">{{ theme.settings.get('textwat') }}</span>
</a>
{% else %}
<a href="https://wa.me/{{ theme.settings.get('numwat') }}?text=مرحبًا! أود الاستفسار عن معلومات إضافية."
   class="whatsapp-buttonleft" 
   aria-label="تواصل معنا عبر واتساب">
  <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="واتساب" style="width: 24px; height: 24px;" />
  <span class="whatsapp-text">{{ theme.settings.get('textwat') }}</span>
</a>
{% endif %}
{% endif %}


<footer class="store-footer pb-[70px] bg-[#f7f7f7] dark:bg-[var(--color-dark-secondary)] md:pb-0" >
	
	<div aria-label="footer" class="store-footer__inner " >
	<div class="container">
	<div class="flex items-center flex-col mb-5 border-b-4">
	<a href="{{ store.url }}" class="flex items-center m-0">
	<img src="{{ store.logo }}" alt="{{ store.name }}"class="max-w-[200px] max-h-[150px]">
	</a>
	
	                {% if store.description %}
					<p class="max-w-sm leading-6 mb-6">
						{{ store.description|raw }}
					</p>
				    {% endif %}

	<div class="lg:flex items-center">
	<ul class="flex mb-6">
		<salla-social></salla-social>
	</ul>
	</div>
	</div>
	<div class="grid grid-col-1 lg:grid-cols-5 gap-8 lg:gap-6">
		<div class=" rtl:lg:pl-20 ltr:lg:pr-20"></div>
		<div class="flex flex-col items-center  md:pr-0 md:[&>div]:w-auto">
			<h3 >{{ trans('blocks.footer.pages_links') }}</h3>
			<salla-menu source="footer"></salla-menu>
		</div>
		<div class="flex flex-col items-center  md:[&>div]:w-auto">
			<salla-contacts></salla-contacts>

		</div>
		<div class="flex flex-col items-center    md:[&>div]:w-auto">
			<salla-apps-icons ></salla-apps-icons>

		</div>



		<div class="flex flex-col items-center   md:[&>div]:w-auto">
			{% if store.settings.tax.number %}
            <div class="flex rtl:space-x-reverse space-x-2 items-end">
              {% if store.settings.tax.certificate %}
                <a class="load-img-onclick" data-modal-id="modal-value-tax" href="#/" alt="{{ store.settings.tax.number }}">
                  <img width="100%" height="100%" src="{{ 'images/s-empty.png' | cdn }}" data-src="{{'images/tax.png' | cdn(70,70)}}" class="lazy w-10 rounded-sm hover:opacity-80 transition-opacity" alt="value added tax">
                </a>
              {% endif %}
              <div>
                <p class="text-sm text-text-grey mb-1">{{ trans('common.elements.tax_number') }}</p>
                <b class="text-sm">{{ store.settings.tax.number }}</b>
              </div>
            </div>

            {% if store.settings.tax.certificate %}
              <salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}" modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
                <div class="flex justify-center max-w-full">
                  <img class="w-full" loading="lazy" 
                  src="{{ 'images/s-empty.png' | cdn }}" 
                  data-src="{{ store.settings.tax.certificate }}" 
                  alt="{{ store.settings.tax.number }}"/>
                </div>
              </salla-modal>
            {% endif %}
          {% endif %}
		</div>

	</div>
	
	
	</div>
	</div>
	<div class="md:flex items-center justify-between py-4 container text-center wow animate__fadeIn">
	<span class="text-sm opacity-75"><p class="text-gray-400 mb-2.5 md:mb-0">{% hook copyright %}</p>
	</span>
	
	<salla-payments class="flex justify-center items-stretch flex-wrap rtl:space-x-reverse gap-2"></salla-payments>

     </div>
	<span class="hidden bottom-2 rtl:pl-24 ltr:pr-24 md:grid-cols-1 md:grid-cols-2 md:grid-cols-3"></span>
	
 

</footer>






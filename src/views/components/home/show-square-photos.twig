{#
| Variable          | Type   | Description                                                      |
|-------------------|--------|------------------------------------------------------------------|
| item             | string  | Section title                                                    |
| item_1           | string  | Desecription                                                |
  collection.img    |img      |img                    |
#}


<section class="s-block s-block--banners container bg-white">

  <div class="px-6 py-0 md:py-0 md:rtl:pl-0 md:ltr:pr-0 flex-1">
      <div class="items-center text-center flex flex-col">
          <h2 class="text-2xl max-w-s md:max-w-2xl md:text-start md:text-4xl font-bold md:!leading-12">
              {{ component.item }} 
          </h2>

          <p class="mx-auto mt-6 max-w-xl text-lg md:text-xl leading-8 text-black-400">
              {{ component.item_1 }}
          </p>

          <div class="mt-4 md:mt-4 flex md:justify-start items-center gap-x-6">
              <button class="button-custom md:text-[20px] text-[17px] flex gap-4 justify-center items-center shadow rounded-[0.25rem] h-12 w-full py-2 px-8 duration-100" href="{{component.item_3}}" type="button">
                  <span class="text">{{ component.buttonText }}</span>
                  
                    <svg data-v-e660a7a7="" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="rotate-180 group-hover:-translate-x-1 transition-transform ease duration-200" width="1em" height="1em" viewBox="0 0 256 256">
                      <path fill="currentColor" d="m221.66 133.66l-72 72a8 8 0 0 1-11.32-11.32L196.69 136H40a8 8 0 0 1 0-16h156.69l-58.35-58.34a8 8 0 0 1 11.32-11.32l72 72a8 8 0 0 1 0 11.32Z">
                      </path>
                    </svg>
               
              </button>
          </div>
      </div>

      <div class="grid grid-cols-1 gap-4 py-8 sm:grid-cols-3 md:grid-cols-3">
          {% for banner in component.gellary %}
          <div>
              <img class="object-cover object-center w-full h-40 max-w-full rounded-lg duration-300 hover:scale-105 hover:shadow-s" src="{{banner.gellary_photo}}" alt="" />
          </div>
          {% endfor %}
      </div>
  </div>
</section>

  <script type"text/javascript">

	window.onload = function() {
    const countdownElement = document.querySelector('.salla-count-down');
    
    if (!countdownElement) {
        console.error('Element not found!');
        return; // إنهاء الدالة إذا لم يتم العثور على العنصر
    }
    
    const endDate = countdownElement.getAttribute('data-end-time');
    const endTime = new Date(`${endDate}T00:00:00Z`).getTime();

    const updateCountdown = () => {
        const now = new Date().getTime();
        const distance = endTime - now;

        if (distance < 0) {
            clearInterval(x);
            document.querySelector('.s-count-down-list').innerHTML = "<li>انتهى العد التنازلي!</li>";
            return; 
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        console.log(`Days: ${days}, Hours: ${hours}, Minutes: ${minutes}, Seconds: ${seconds}`);

        document.getElementById('days').innerText = days;
        document.getElementById('hours').innerText = hours;
        document.getElementById('minutes').innerText = minutes;
        document.getElementById('seconds').innerText = seconds;
    };

    updateCountdown();
    const x = setInterval(updateCountdown, 1000);
};





 
</script>

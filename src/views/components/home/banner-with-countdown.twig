
 
<section class="s-block--features container flex justify-center px-2 md:px-0 py-8">
  <div class="container">
    <div class="bg-center bg-cover p-8 sm:p-10 rounded-2xl w-full text-white flex items-center justify-between mx-auto flex-col py-8" style="
              background: linear-gradient(rgb(49 47 49 / 80%), rgb(79 79 79 / 80%)), url('{{ component.imagebackground }}');">

      <div class="flex flex-col w-full items-center gap-4">
        <div class="flex flex-col text-center py-4">
          <span class="text-gray-200 font-bold">{{ component.title }}</span> <!-- إضافة font-bold هنا -->
          <span class="text-gray-200 text-4xl md:text-5xl text-white font-semibold pt-2 font-bold">{{ component.dese }}</span> <!-- إضافة font-bold هنا -->
        </div>
        <div>
          <div class="flex flex-col justify-center text-center">
            <p class="text-gray-200 font-bold">{{ component.desc }}</p> <!-- إضافة font-bold هنا -->
            <salla-count-down color="#ffffff" class="basis-1/4 s-count-down-wrapper hydrated" boxed="false" digits="auto" size="lg" labeled="true" date="{{ component.countsown }}">
            </salla-count-down>
          </div>
        </div>
      </div>
      <div>
        <a href="{{ component.link }}" target="_self">
          <button type="button" data-modal-target="discount-modal" data-modal-toggle="discount-modal" rel="noreferrer" class="text-black bg-white hover:bg-gray-50 px-4 py-2 rounded-lg w-fit ease duration-300 flex gap-1 items-center">
            <span class="font-bold">{{ component.buttontext }}</span> <!-- إضافة font-bold هنا -->
            <svg data-v-e660a7a7="" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="rotate-180 group-hover:-translate-x-1 transition-transform ease duration-200" width="1em" height="1em" viewBox="0 0 256 256">
              <path fill="currentColor" d="m221.66 133.66l-72 72a8 8 0 0 1-11.32-11.32L196.69 136H40a8 8 0 0 1 0-16h156.69l-58.35-58.34a8 8 0 0 1 11.32-11.32l72 72a8 8 0 0 1 0 11.32Z">
              </path>
            </svg>
          </button>
        </a>
      </div>
    </div>
  </div>
</section>

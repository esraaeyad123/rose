
<section class="s-block s-block--full-bg as-grid bg-white py-4 sm:py-6 yasmeen-countdown bg-[#faf2f0]">
  <div class="relative px-8 lg:px-10 md:flex justify-between items-center">
    <div class="flex flex-col mb-6 w-full md:w-1/2 bg-store-color">
      <p class="inline-block font-semibold text-primary mb-2">{{ component.title }}</p>
      <p class="sm:text-2xl text-xl font-extrabold text-base-content break-words">{{ component.desc }}</p>
    </div>

    <div class="flex [&:hover>div]:w-16 [&>div:hover]:w-[30rem]">
      {% for item in component.listPhoto %}
        {% if loop.index == 1 %}
          <div class="group relative h-96 w-[30rem] cursor-pointer overflow-hidden rounded-lg transition-all duration-200">
            {% if component.videotoimg %}
              <img class="h-full object-cover" src="{{ item.photo }}" alt="" />
            {% else %}
              <video class="h-full object-cover" src="{{ item.url }}" type="video/mp4" autoplay muted loop></video>
            {% endif %}
          </div>
        {% else %}
          <div class="group relative h-96 w-16 cursor-pointer overflow-hidden rounded-lg transition-all duration-200">
            {% if component.videotoimg %}
              <img class="h-full object-cover" src="{{ item.photo }}" alt="" />
            {% else %}
              <video class="h-full object-cover" src="{{ item.url }}" type="video/mp4" autoplay muted loop></video>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>




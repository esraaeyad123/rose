<section class="s-block s-block--full-bg as-grid bg-white py-4 sm:py-6">
    <div class="relative px-6 lg:px-8 md:flex">
        <div class="flex flex-col basis-1/4 mb-6">
            <p class="inline-block font-semibold text-primary mb-2">{{ component.title }}</p>
            <p class="sm:text-4xl text-3xl font-extrabold text-base-content">{{ component.description }}</p>
        </div>
        <ul class="flex flex-col basis-3/4">
            {% for item in component.faq %}
            <li class="py-3 w-full">
                <details class="group bg-[#FFF6F3] text-[var(--color-primary)] flex flex-col items-start justify-between w-full rounded-lg shadow-md transition duration-300 ease-in-out hover:shadow-lg">
                    <summary class="flex cursor-pointer list-none items-center justify-between font-medium w-full">
                        <span class="text-base font-semibold leading-7">{{ item.item_1 }}</span>
                        <span class="transition group-open:rotate-180">
                            <svg fill="none" height="24" shape-rendering="geometricPrecision"
                                 stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                 stroke-width="1.5" viewBox="0 0 24 24" width="24">
                                <path d="M6 9l6 6 6-6"></path>
                            </svg>
                        </span>
                    </summary>
                    <p class="text-base leading-7 pt-2 group-open:animate-fadeIn mt-3 text-gray-600 transition duration-300">{{ item.item }}</p>
                </details>
            </li>
            {% endfor %}
        </ul>
    </div>
</section>

<section class="s-block s-block--full-bg as-grid bg-white py-4 sm:py-6">
    <div class="relative px-4 lg:px-8 md:flex">
        <div class="flex flex-col mb-6 w-full md:w-1/2">
            <p class="inline-block font-semibold text-primary mb-2">{{ component.title }}</p>
            <p class="sm:text-1xl text-l font-bold text-base-content break-words">{{ component.description }}</p>
        </div>
        <ul class="basis-1/2 w-full">
            {% for item in component.faq %}
            <div class="py-2"> <!-- تعديل المسافة هنا -->
                <details class="group bg-[#FFF6F3] text-[var(--color-primary)] md:flex-row flex-col items-center justify-between w-full h-full lg:px-10 px-5 py-5 gap-4 rounded-lg shadow-md transition duration-300 ease-in-out hover:shadow-lg">
                    <summary class="flex cursor-pointer list-none items-center justify-between font-medium">
                        <span class="text-base font-semibold leading-7">{{ item.item_1 }}</span>
                        <span class="transition group-open:rotate-180">
                            <svg fill="none" height="24" shape-rendering="geometricPrecision"
                                 stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                 stroke-width="1.5" viewBox="0 0 24 24" width="24">
                                <path d="M6 9l6 6 6-6"></path>
                            </svg>
                        </span>
                    </summary>
                    <p class="text-base leading-7 pt-2 group-open:animate-fadeIn mt-3 text-gray-600 transition duration-300">{{ item.item }}</p>
                </details>
            </div>
            {% endfor %}
        </ul>
    </div>
</section>

<div id="my_modal" 
    class="bg-black/50 fixed top-0 right-0 left-0 z-50 h-full flex items-center justify-center overflow-hidden">
    <div class="relative p-4 w-full max-w-sm md:max-w-md lg:max-w-lg h-auto">

        <div class="relative bg-white rounded-lg overflow-hidden shadow-lg ring-4 ring-[var(--color-primary-dark)] ring-opacity-40">
            <button onclick="app.closeModal()" type="button"
                class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center popup-close">
                <svg aria-hidden="true" class="w-5 h-5" fill="#c6c7c7" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
                <span class="sr-only">Close popup</span>
            </button>
            <img class="w-full h-auto" src="{{component.item_1}}" alt="Product Image">

            <div class="p-5">
                <h3 class="text-2xl mb-0.5 font-medium"></h3>
                <p class="mb-4 text-sm font-normal text-gray-800"></p>

                <div class="text-center">
                    <p class="mb-3 text-2xl font-semibold leading-5 text-slate-900">
                        {{component.item_2}}
                    </p>
                    <p class="mt-2 text-sm leading-4 text-slate-600">
                        {{component.item_3}}
                    </p>
                </div>

                <div class="mt-6 text-center text-sm text-slate-600">
                   <a href="{{ link }}">
                    <button class="bg-[var(--color-primary)] font-bold text-white cursor-pointer tracking-normal md:text-[20px] text-[17px] flex gap-4 justify-center items-center shadow rounded-[0.25rem] h-12 w-full py-2 px-4 duration-100">
                        {{component.textbutton}}                    
                    </button>  
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


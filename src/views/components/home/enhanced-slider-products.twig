<section class="s-block--special-products-slider2 relative overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-full -z-[1] bg-black bg-opacity-50">
        {% if component.videotoimg %}
            <img 
                class="w-full h-full object-cover object-center" 
                src="{{ component.photo }}" 
                loading="lazy"
            >
        {% else %}
            <video
                playsinline
                class="w-full h-full object-cover object-center"
                loop
                autoplay
                muted
                src="{{ component.url }}"
            ></video>
        {% endif %}
    </div>

    <div class="min-h-[600px] w-full flex flex-col lg:flex-row justify-between items-start lg:items-center pt-8 relative z-10">
        <div class="lg:w-1/2 flex flex-col justify-center items-start text-left p-8">
            <h2 class="font-bold text-3xl">{{ component.title }}</h2>
            <p class="description max-w-[500px] text-sm sm:text-base mt-4">{{ component.desc }}</p>

            {% if component.item5 %}
                <a class="button-custom mt-4" style="background-color: {{ component.item4 }};" href="{{ component.display_all_url }}">
                    <span style="color: {{ component.item3 }};">{{ component.item5 }}</span>
                </a>
            {% endif %}
        </div>

        <div class="lg:w-1/2 flex-shrink-0 relative">
            <div class="slider-wrap relative lg:w-full pb-8">
                <salla-products-slider
                    id="product-slider"
                    class="simplified-products fit-slider-products s-products-slider-wrapper"
                    autoplay
                    type="carousel"
                    {% if component.products|length %}
                        source="selected"
                        source-value="[{{ component.products|map((product) => product.id)|join(',') }}]"
                    {% endif %}
                    {% if display_all != '' and display_all != '#' %}
                        display-all-url="{{ display_all }}"
                    {% endif %}
                ></salla-products-slider>

                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
</section>


<style>
    .s-products-slider-wrapper .product-slider {
  width: calc(40% - 10px); /* تصغير عرض البطاقات إلى 20% مع تقليل المسافة */
}

.s-products-slider-wrapper .swiper-slide {
  width: calc(40% - 10px); /* تصغير عرض الشرائح داخل السلايدر */
}

@media (max-width: 1024px) {
  .s-products-slider-wrapper .swiper-slide {
    width: calc(25% - 10px); /* تصغير العناصر أكثر عند الأجهزة متوسطة الحجم */
  }
}

@media (max-width: 768px) {
  .s-products-slider-wrapper .swiper-slide {
    width: calc(33.333% - 10px); /* تقليل العناصر أكثر للأجهزة الصغيرة */
  }
}

@media (max-width: 480px) {
  .s-products-slider-wrapper .swiper-slide {
    width: calc(50% - 10px); /* عرض العنصر نصف الشاشة للأجهزة الصغيرة جدًا */
  }
}

</style>
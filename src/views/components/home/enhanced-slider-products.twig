<section class="s-block--special-products-slider2">
    <div class="min-h-[600px] w-full flex flex-col lg:flex-row justify-center items-stretch pt-1 lg:pt-5 relative h-full lg:space-y-0 lg:space-x-10">

        <div class="lg:w-1/3 flex items-center justify-center bg-cover bg-no-repeat text-center relative sm:min-h-[200px] sm:max-h-[300px] lg:min-h-[400px] lg:max-h-[1000px] has-overlay--before has-overlay--opacity-option has-overlay--opacity-60"
            style="color: {{ component.item2 }};">
            {% if component.videotoimg %}
                <img class="lazy w-full h-auto object-cover object-center sm:min-h-[200px] sm:max-h-[250px] lg:min-h-[400px] lg:max-h-[1000px] loaded" src="{{ component.photo }}" alt="{{ component.title }}" loading="lazy">
            {% else %}
                <video playsinline class="object-cover object-center w-full h-full sm:min-h-[200px] sm:max-h-[250px] lg:min-h-[400px] lg:max-h-[800px]" loop autoplay muted src="{{ component.url }}"></video>
            {% endif %}

            <div class="space-y-4 lg:space-y-8 absolute top-0 left-0 w-full h-full flex flex-col items-center justify-center px-2.5 py-10 lg:p-10 z-[1]">
                <h2 class="font-bold !leading-[1.15]">{{ component.title }}</h2>
                <p class="description max-w-[400px] text-sm sm:text-base">{{ component.desc }}</p>
                {% if component.item5 %}
                    <a class="button-custom" style="background-color: {{ component.item4 }};" href="{{ component.display_all_url }}">
                        <span style="color: {{ component.item3 }};">{{ component.item5 }}</span>
                    </a>
                {% endif %}
            </div>
        </div>

        <div class="mt-5 lg:mt-0"></div> 

        <div class="slider-wrap relative lg:w-2/3 pb-10 lg:pt-15 lg:pb-28 2xl:px-2.5">
            <salla-products-slider
                id="product-slider"
                class="simplified-products fit-slider-products s-products-slider-wrapper" 
                autoplay
                type="carousel"
                {% if component.products|length %}
                    source="selected"
                    source-value="[{{ component.products|map((product) => product.id)|join(',') }}]"
                {% endif %}
                {% if display_all != '' and display_all != '#' %}
                    display-all-url="{{ display_all }}"
                {% endif %}
            ></salla-products-slider>

            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>

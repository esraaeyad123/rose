
<section class="s-block s-block--features-products {% if items | length > 1 %}two-cols{% endif %} container">
    <div class="inner">
        {% for section in items %}
            <div>
                <div class="s-block__title">
                  <h2>{{ section.title }} </h2>
                  {# <p>عنوان فرعي توصيفي صغير</p> #}
                </div> 
                <div class="flex-1 grid lg:grid-cols-2 gap-4 sm:gap-8">
                    {% if section.featured_product %}
                        <custom-salla-product-card shadow-on-hover product="{{section.featured_product}}" fullImage></custom-salla-product-card>
                        <div class="grid gap-4 sm:gap-8">
                            {% for product in section.products|slice(0,3) %}
                                <custom-salla-product-card shadow-on-hover product="{{product}}" minimal></custom-salla-product-card>
                            {% endfor %}
                        </div>
                    {% else %}
                        {% for product in section.products %}
                            <custom-salla-product-card shadow-on-hover product="{{product}}" minimal></custom-salla-product-card>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</section>

<section class="s-block--special-products-slider--8 s-block--special-products-slider">
    <div class="min-h-[600px] w-full flex flex-col lg:flex-row justify-center items-stretch pt-8 relative h-full lg:space-y-0 lg:space-x-10 rtl:space-x-reverse">
        
        <div class="lg:w-1/3 flex items-center justify-center relative bg-cover bg-no-repeat text-center" style="background-color: #0D0C0C; color: #ffffff;">
            <video playsinline="" class="object-cover object-center w-full h-full" loop autoplay muted src="https://your-video-source.mp4"></video>
            <div class="absolute top-0 left-0 w-full h-full flex flex-col items-center justify-center p-10 z-10">
                <h2 class="text-2xl md:text-4xl font-bold">العطور</h2>
                <p class="description max-w-[400px] text-sm sm:text-base">اكتشفي عالم العطور وجمال الروائح.</p>
                <a class="advanced-slider__caption__inner__content__button" href="#" style="background-color: #ffffff; color: #0D0C0C; padding: 10px 20px; border-radius: 5px;">اكتشفي المزيد</a>
            </div>
        </div>

        <div class="slider-wrap lg:w-2/3 pb-20 lg:pt-0 lg:pb-20">
            <salla-products-list
                source="selected"
                limit="{{ limit }}"
                source-value="[{{ products|map((product) => product.id)|join(',') }}]"
                class="{{ is_vertical ? 'vertical-products' : 'horizontal-products' }} {{ is_vertical ? '' : 'horizontal-cards' }}">
            </salla-products-list>
        </div>
    </div>
</section>


<style>
    .s-block--special-products-slider {
    background-color: #f5f5f5; /* لون الخلفية */
    padding: 20px; /* مساحة داخلية */
    border-radius: 10px; /* زوايا مدورة */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* ظل */
}

/* تنسيق الفيديو */
.s-block--special-products-slider video {
    border-radius: 10px; /* زوايا مدورة للفيديو */
}

/* تنسيق العناوين */
.s-block--special-products-slider h2 {
    color: #0D0C0C; /* لون العنوان */
    margin-bottom: 10px; /* مسافة أسفل العنوان */
}

/* تنسيق الوصف */
.s-block--special-products-slider .description {
    color: #555; /* لون النص */
    line-height: 1.5; /* ارتفاع السطر */
}

/* تنسيق الأزرار */
.advanced-slider__caption__inner__content__button {
    transition: background-color 0.3s ease; /* تأثير انتقال */
}

.advanced-slider__caption__inner__content__button:hover {
    background-color: #0D0C0C; /* تغيير اللون عند التمرير */
    color: #ffffff; /* تغيير لون النص عند التمرير */
}


</style>
<section class="relative h-screen flex flex-col items-center justify-center text-center text-white">
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
        {% if component.videotoimg %}
        <img src="{{component.background_image}}"  class="absolute inset-0 w-full h-full object-cover filter blur-sm">
        {% else %}
        <video class="w-full h-full object-cover object-center" src="{{component.url}}" type="video/mp4" autoplay muted loop></video>
        {% endif %}
    </div>

    <div class="flex flex-col w-full h-full justify-center items-center relative z-[20] p-6 sm:p-10 text-center overflow-hidden">
        <h1 class="md:text-[40px] text-[30px] font-medium md:leading-[2.7rem] py-4 !leading-tight text-white overflow-hidden flex flex-col gap-3 md:w-1/2 mx-auto">
            {{component.title}}  
        </h1>

        <h1 class="md:text-[20px] text-[15px] font-medium md:leading-[2.7rem] py-4 !leading-tight text-white overflow-hidden flex flex-col gap-3 md:w-1/2 mx-auto">
            {{component.desc}}    
        </h1>

        {% if component.titleButton    %}
        <div class="mt-4 md:mt-4 flex md:justify-start items-center gap-x-6">
            <button class="button-custom md:text-[20px] text-[17px] flex gap-4 justify-center items-center shadow rounded-[0.25rem] h-12 w-full py-2 px-8 duration-100" href="{{component.link}}" type="button" >
            <span class="text"> {{component.titleButton}}</span>
            <svg data-v-e660a7a7="" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="rotate-180 group-hover:-translate-x-1 transition-transform ease duration-200" width="1em" height="1em" viewBox="0 0 256 256">
                <path fill="currentColor" d="m221.66 133.66l-72 72a8 8 0 0 1-11.32-11.32L196.69 136H40a8 8 0 0 1 0-16h156.69l-58.35-58.34a8 8 0 0 1 11.32-11.32l72 72a8 8 0 0 1 0 11.32Z">
                </path>
              </svg>
          </button>
          </div>
          {% endif %}
    </div>
</section>





